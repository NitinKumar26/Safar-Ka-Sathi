<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/hom"
                android:layout_marginStart="2dp"
                android:layout_width="50dp"
                android:layout_gravity="center|end"
                android:padding="12dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/icon_7" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="-1dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museo700_regular"
                android:textSize="26sp"
                tools:text="Bhiwandi"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                />

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="end"
                android:layout_gravity="center|end"
                android:layout_marginTop="-1dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museo700_regular"
                android:textSize="20sp"
                tools:text="60 Pts"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary">

            </TextView>

        </LinearLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <androidx.cardview.widget.CardView
              app:cardCornerRadius="5dp"
              android:layout_margin="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_margin="20dp"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


                  <TextView
                      android:fontFamily="@font/opensans_regular"
                      android:textSize="16sp"
                      android:layout_marginTop="30dp"
                      android:layout_width="match_parent"
                      android:textColor="?android:attr/textColorPrimary"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      tools:text="Location: Mazagon Dock Shipbuilders Limited" />

                  <TextView
                      android:fontFamily="@font/opensans_regular"
                      android:textSize="14sp"
                      android:textColor="?android:attr/textColorPrimary"
                      android:layout_marginTop="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      tools:text="Distance: 45KMs away" />

                  <com.makeramen.roundedimageview.RoundedImageView
                      android:id="@+id/uploadImage"
                      android:scaleType="fitCenter"
                      app:riv_corner_radius="5dp"
                      android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_gravity="center"
                      android:layout_height="160dp"
                      android:layout_weight="1"
                      tools:src="@drawable/dummy"
                      />

                  <TextView
                      android:fontFamily="@font/opensans_regular"
                      android:layout_marginTop="50dp"
                      android:textSize="14sp"
                      android:textColor="?android:attr/textColorPrimary"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Task end time"
                      />

                  <FrameLayout
                      android:background="@drawable/border_5"
                      android:layout_marginTop="10dp"
                      android:padding="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:layout_weight="1">


                      <TextView
                          android:id="@+id/endtime"
                          android:layout_gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:fontFamily="@font/opensans_bold"
                          android:textColor="?android:attr/textColorPrimary"
                          android:gravity="center|start"
                          android:textSize="20sp"
                          android:background="@color/transparent"
                          android:ems="10"
                          tools:text="3:00 pm" />

                  </FrameLayout>

                  <TextView
                      android:fontFamily="@font/opensans_regular"
                      android:layout_marginTop="20dp"
                      android:textSize="14sp"
                      android:textColor="?android:attr/textColorPrimary"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Location" />

                  <FrameLayout
                      android:background="@drawable/border_5"
                      android:layout_marginTop="10dp"
                      android:padding="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1">

                      <TextView
                          android:id="@+id/location"
                          android:layout_gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/opensans_bold"
                          android:textColor="?android:attr/textColorPrimary"
                          android:gravity="center|start"
                          android:textSize="20sp"
                          android:background="@color/transparent"
                          tools:text=""
                          android:paddingBottom="8dp"
                          android:paddingTop="8dp" />

                  </FrameLayout>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
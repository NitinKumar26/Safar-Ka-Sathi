<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/hom"
                android:layout_marginStart="2dp"
                android:layout_width="50dp"
                android:layout_gravity="center|end"
                android:padding="12dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/icon_7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="-1dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museo700_regular"
                android:textSize="26sp"
                android:text="City Palace"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/thumb_1" />

                    <TextView
                        android:fontFamily="@font/museo700_regular"
                        android:gravity="center"
                        android:textSize="26sp"
                        android:layout_marginTop="50dp"
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Task Rejected" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="The image was blurred"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        />

                    <TextView
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="16sp"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Try Again To Earn Points: Upload an image of goods being loaded in the truck. Image should include vehicle no." />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/border_4"
                        android:layout_marginTop="50dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_marginStart="2dp"
                            android:layout_width="50dp"
                            android:layout_gravity="center|start"
                            android:padding="12dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/icon_9" />

                        <TextView
                            android:fontFamily="@font/museo700_regular"
                            android:textSize="18sp"
                            android:textColor="@color/color_link_1"
                            android:layout_gravity="center|start"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:text="Upload goods loading" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
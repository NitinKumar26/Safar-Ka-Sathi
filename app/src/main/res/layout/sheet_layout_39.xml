<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                app:srcCompat="@drawable/icon_15" />

            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/museo700_regular"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Terms and Conditions" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"                 >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="20dp"
                            android:padding="12dp"
                            android:background="@drawable/bullet_1"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:layout_marginStart="10dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_weight="2"
                            android:fontFamily="@font/museo300_regular"
                            android:text="Minimum of 100 points balance should be maintained"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                   >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="20dp"
                            android:padding="12dp"
                            android:background="@drawable/bullet_1"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/museo300_regular"
                            android:maxLines="2"
                            android:text="Points can be redeemed only in multiple of 100â€™s"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                     >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="20dp"
                            android:padding="12dp"
                            android:background="@drawable/bullet_1"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/museo300_regular"
                            android:maxLines="2"
                            android:text="Points can be redeemed after a minimum of three days of credit"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="16sp" />

                    </LinearLayout>
                </FrameLayout>

                <Button
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:id="@+id/button3"
                    android:textColor="@color/text_accept"
                    android:textSize="20sp"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:fontFamily="@font/museo300_regular"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:backgroundTint="@color/btn_blue_tint"
                    />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>


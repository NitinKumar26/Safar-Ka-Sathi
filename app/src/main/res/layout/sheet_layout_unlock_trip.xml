<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="22dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_14" />

            <TextView
                android:fontFamily="@font/museo700_regular"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginTop="3dp"
                android:textColor="?android:attr/textColorPrimary"
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Unlock Trip Details" />

            <TextView
                android:id="@+id/transporterName"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:background="@drawable/border_1"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editNumber"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Enter Vehicle Number"
                    android:textColorHint="?android:attr/textColorSecondary"
                    android:textColor="?android:attr/textColorPrimary" />

            </FrameLayout>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:elevation="2dp"
                android:fontFamily="@font/museo700_regular"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/text_accept"
                android:textSize="22sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:backgroundTint="@color/btn_accept"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
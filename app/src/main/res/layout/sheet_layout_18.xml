<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/thumb_1" />

            <TextView
                android:fontFamily="@font/museo700_regular"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginTop="50dp"
                android:textColor="?android:attr/textColorPrimary"
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Location"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bhiwandi"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Halol"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bichhiwara"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="City Palace"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Kasheli"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Davali"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:buttonTint="@color/border_1"
                        android:layout_gravity="end"
                        android:scaleX="1.50"
                        android:scaleY="1.50"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/border_1"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:fontFamily="@font/museo700_regular"
                    android:textSize="20sp"
                    android:textColor="@color/color_link_1"
                    android:layout_gravity="center|start"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detect Current Location" />

                <ImageView
                    android:layout_marginStart="2dp"
                    android:layout_width="50dp"
                    android:layout_gravity="center|start"
                    android:padding="12dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/icon_13" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
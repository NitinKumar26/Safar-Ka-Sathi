<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorBackground">

                <TextView
                    tools:text="4 Open Requests"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    tools:text="View all"
                    android:layout_gravity="end"
                    android:textColor="?android:attr/colorPrimary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_height="wrap_content"
                    />

            </FrameLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorBackground">

                <FrameLayout
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/colorBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon_4"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_marginStart="60dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorBackground">

                        <TextView
                            android:text="Open Truck"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_regular"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                        <TextView
                            android:layout_marginStart="30dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_regular"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:text="Tata 407 Gold FSC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="60dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorBackground">

                        <TextView
                            android:text="MH09PE9867"
                            android:textSize="20sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginStart="30dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:fontFamily="@font/museo700_regular"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:text="14 Trips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorBackground">

                <FrameLayout
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/colorBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon_4"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_marginStart="60dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorBackground">

                        <TextView
                            android:text="Open Truck"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_regular"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                        <TextView
                            android:layout_marginStart="30dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_regular"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:text="87 Gold FSC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="60dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorBackground">

                        <TextView
                            android:text="MH99PEYH67"
                            android:textSize="20sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginStart="30dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:fontFamily="@font/museo700_regular"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:text="14 Trips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="?android:attr/colorBackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_marginStart="2dp"
                        android:layout_width="50dp"
                        android:layout_gravity="center|end"
                        android:padding="12dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/icon_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="-1dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/museo700_regular"
                        android:textSize="26sp"
                        android:text="Trip Requests"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"/>

                </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:shimmer_auto_start="true"
                    tools:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/museo700_regular"
                            android:text="0 Trip Requests"
                            android:textColor="?android:attr/textColorPrimary"
                            android:background="@color/colorGrey"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/colorGrey"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:orientation="vertical"
                                        android:layout_marginEnd="100dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_height="25dp"
                                            android:fontFamily="@font/museo700_regular"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:background="@color/colorGrey" />

                                    </LinearLayout>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/linear_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="18sp"
                            android:id="@+id/openListText"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            tools:text="4 Open Requests"
                            android:layout_height="wrap_content"
                            />

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listOpen"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_height="wrap_content"
                        />

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="18sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="Rejected Trips"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="16sp"
                            android:textColor="@color/color_blue"
                            android:layout_gravity="center|end"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="View All"
                            android:layout_height="wrap_content"
                            />

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listReject"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="18sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="Expired Request"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="16sp"
                            android:textColor="@color/color_blue"
                            android:layout_gravity="center|end"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="View All"
                            android:layout_height="wrap_content"
                            />

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listExpire"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="18sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="Ongoing Request"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="16sp"
                            android:textColor="@color/color_blue"
                            android:layout_gravity="center|end"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:text="View All"
                            android:layout_height="wrap_content"/>

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listOngoing"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</com.flipboard.bottomsheet.BottomSheetLayout>